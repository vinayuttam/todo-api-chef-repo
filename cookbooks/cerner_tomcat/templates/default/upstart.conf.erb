# <%= @name %> generated by cerner_tomcat for <%= @new_resource.to_s %>
# Based of poise-service template: https://github.com/poise/poise-service/blob/master/chef/templates/default/upstart.conf.erb

description "<%= @name %>"

start on runlevel [2345]
stop on runlevel [!2345]

# Once this issue resolves: https://github.com/poise/poise-service/issues/42 we can migrate to that solution instead.
# Set resource limits.  Resource limits are set with init.
# See: https://linux.die.net/man/5/init for a complete list of supported limits and parameters.
<% limits = @new_resource.enclosing_provider.new_resource.limits %>
<%= "limit nofile #{limits['open_files']} #{limits['open_files']}" %>
<%= "limit nproc #{limits['max_processes']} #{limits['max_processes']}" %>

respawn
respawn limit 10 5
umask 022
chdir <%= @directory %>
<%- @environment.each do |key, val| -%>
env <%= key %>="<%= val %>"
<%- end -%>
<%- if @upstart_features[:setuid] -%>
setuid <%= @user %>
<%- end -%>
<%- if @upstart_features[:kill_signal] -%>
kill signal <%= @stop_signal %>
<%- end -%>
<%- if @upstart_features[:reload_signal] -%>
reload signal <%= @reload_signal %>
<%- end -%>

<%- if @upstart_features[:setuid] -%>
exec <%= @command %>
<%- else -%>
script
exec /opt/chef/embedded/bin/ruby <<EOH
require 'etc'
ent = Etc.getpwnam(<%= @user.inspect %>)
if Process.euid != ent.uid || Process.egid != ent.gid
  Process.initgroups(ent.name, ent.gid)
  Process::GID.change_privilege(ent.gid) if Process.egid != ent.gid
  Process::UID.change_privilege(ent.uid) if Process.euid != ent.uid
end
ENV["HOME"] = Dir.home(<%= @user.inspect %>) rescue nil
exec(*<%= Shellwords.split(@command).inspect %>)
EOH
end script
<%- end -%>
<%- if !@upstart_features[:kill_signal] && @stop_signal != 'TERM' -%>
pre-stop script
  PID=`initctl status <%= @name %> | sed 's/^.*process \([0-9]*\)$/\1/'`
  if [ -n "$PID" ]; then
    kill -<%= @stop_signal %> "$PID"
  fi
end script
<%- end -%>